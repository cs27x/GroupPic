<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.vanderbilt.cs278.grouppic.client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="20" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.vanderbilt.cs278.grouppic.client.PictureDetailActivity"
            android:label="@string/title_activity_photo_detail"
            android:parentActivityName="edu.vanderbilt.cs278.grouppic.client.MainGridViewActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.vanderbilt.cs278.grouppic.client.MainGridViewActivity" />
        </activity>

        <activity
            android:name="edu.vanderbilt.cs278.grouppic.client.MainGridViewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.vanderbilt.cs278.grouppic.client.PicturePostActivity"
            android:label="Send Picture"
            android:parentActivityName="edu.vanderbilt.cs278.grouppic.client.MainGridViewActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.vanderbilt.cs278.grouppic.client.MainGridViewActivity" />
        </activity>
    </application>

</manifest>
